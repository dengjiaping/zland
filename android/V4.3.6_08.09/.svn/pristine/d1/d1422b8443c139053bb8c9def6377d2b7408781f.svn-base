<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/llRooView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择环境 ："
            android:textColor="@color/color_f1"
            android:textSize="@dimen/txt_18"
            />

        <com.zhisland.android.blog.common.view.CustomListView
            android:id="@+id/lvEnv"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/color_div"
            android:dividerHeight="@dimen/app_divider_height"/>

        <EditText
            android:id="@+id/etHost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="请输入自定义host..."
            android:textColor="@color/color_f1"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnModifyEnv"
            style="@style/LOGIN_BUTTON"
            android:layout_marginTop="20dp"
            android:text="确定"
            />

    </LinearLayout>
</ScrollView>