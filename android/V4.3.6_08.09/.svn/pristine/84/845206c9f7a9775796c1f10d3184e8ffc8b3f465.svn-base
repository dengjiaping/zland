<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/RootBg2" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/color_bg1"
                android:textSize="@dimen/txt_14"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_line_height"
                android:layout_marginTop="10dp"
                android:background="@color/color_div" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_bg1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="公司名称"
                    android:textColor="@color/color_f2"
                    android:textSize="@dimen/txt_18" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/tvName"
                    android:background="@color/transparent"
                    android:hint="请输入公司名称"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:maxLength="40"
                    android:textColor="@color/color_f1"
                    android:textColorHint="@color/color_f3"
                    android:textSize="@dimen/txt_18" />

                <View
                    android:id="@+id/vlineCom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_line_height"
                    android:layout_below="@id/etName"
                    android:background="@color/color_div" />

                <TextView
                    android:id="@+id/tvPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vlineCom"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="职位名称"
                    android:textColor="@color/color_f2"
                    android:textSize="@dimen/txt_18" />

                <EditText
                    android:id="@+id/etPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparent"
                    android:layout_below="@+id/vlineCom"
                    android:layout_toRightOf="@id/tvPosition"
                    android:hint="请输入职位名称"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:maxLength="20"
                    android:textColor="@color/color_f1"
                    android:textColorHint="@color/color_f3"
                    android:textSize="@dimen/txt_18" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_line_height"
                android:background="@color/color_div" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_line_height"
                android:layout_marginTop="10dp"
                android:background="@color/color_div" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_bg1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:id="@+id/tvWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="公司官网"
                    android:textColor="@color/color_f2"
                    android:textSize="@dimen/txt_18" />

                <EditText
                    android:id="@+id/etWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/tvWebsite"
                    android:background="@color/transparent"
                    android:hint="请输入公司官网地址（选填）"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_f1"
                    android:textColorHint="@color/color_f3"
                    android:textSize="@dimen/txt_18" />

                <View
                    android:id="@+id/vlineOne"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_line_height"
                    android:layout_below="@id/etWebsite"
                    android:background="@color/color_div" />

                <TextView
                    android:id="@+id/tvIndustry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vlineOne"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="所属行业"
                    android:textColor="@color/color_f2"
                    android:textSize="@dimen/txt_18" />

                <TextView
                    android:id="@+id/etIndustry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/vlineOne"
                    android:layout_toRightOf="@id/tvIndustry"
                    android:drawableRight="@drawable/img_arrow_right"
                    android:hint="请选择公司所属行业"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_f1"
                    android:textColorHint="@color/color_f3"
                    android:textSize="@dimen/txt_18" />

                <View
                    android:id="@+id/vlineTwo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_line_height"
                    android:layout_below="@id/etIndustry"
                    android:background="@color/color_div" />

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vlineTwo"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="所在城市"
                    android:textColor="@color/color_f2"
                    android:textSize="@dimen/txt_18" />

                <TextView
                    android:id="@+id/etCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/vlineTwo"
                    android:layout_toRightOf="@id/tvCity"
                    android:drawableRight="@drawable/img_arrow_down_list_grey"
                    android:hint="请选择公司所在城市"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_f1"
                    android:textColorHint="@color/color_f3"
                    android:textSize="@dimen/txt_18" />

                <View
                    android:id="@+id/vlineThree"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_line_height"
                    android:layout_below="@id/etCity"
                    android:background="@color/color_div" />

                <TextView
                    android:id="@+id/tvStockCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vlineThree"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:text="股票代码"
                    android:textColor="@color/color_f2"
                    android:textSize="@dimen/txt_18" />

                <EditText
                    android:id="@+id/etStockCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/vlineThree"
                    android:layout_toRightOf="@id/tvStockCode"
                    android:background="@color/transparent"
                    android:hint="请输入股票代码（选填）"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_f1"
                    android:textColorHint="@color/color_f3"
                    android:textSize="@dimen/txt_18" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_line_height"
                android:background="@color/color_div" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_line_height"
                android:layout_marginTop="10dp"
                android:background="@color/color_div" />

            <EditText
                android:id="@+id/etDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="请输入公司简介"
                android:background="@color/color_bg1"
                android:lineSpacingMultiplier="1.1"
                android:minLines="5"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:textColor="@color/color_f1"
                android:textColorHint="@color/color_f3"
                android:textSize="@dimen/txt_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_line_height"
                android:background="@color/color_div" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_line_height"
                android:layout_marginTop="10dp"
                android:background="@color/color_div" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/sel_btn_add_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivLogo"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="10dp"
                    android:text="请上传公司LOGO(选填)"
                    android:textColor="@color/color_f2"
                    android:textSize="@dimen/txt_16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_line_height"
                android:layout_marginBottom="10dp"
                android:background="@color/color_div" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff7171"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:textColor="@color/color_bg1"
        android:textSize="@dimen/txt_14"
        android:visibility="gone" />

</RelativeLayout>