<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootBg1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/color_sc"
                android:gravity="center"
                android:text="目前我们仅支持推荐来自微信公众号的文章链接"
                android:textColor="@color/color_bg1"
                android:textSize="@dimen/txt_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:text="正和岛资讯是一个针对企业家人群的，优质内容的共享交流平台你可以把看到的好文章在此推荐，与广大企业家、创业者分享交流，共同成长进步。"
                android:textColor="@color/color_f1"
                android:textSize="@dimen/txt_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="40dp"
                android:paddingRight="40dp">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/app_line_height"
                    android:layout_weight="1"
                    android:background="@color/color_div" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="如何推荐分享？"
                    android:textColor="@color/color_f1"
                    android:textSize="@dimen/txt_16" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/app_line_height"
                    android:layout_weight="1"
                    android:background="@color/color_div" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:src="@drawable/img_how_to_send_link" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_button_height"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/sel_bg_btn_bgreen"
        android:gravity="center"
        android:text="第三步，点击这里开始推荐链接"
        android:textColor="@color/color_bg1"
        android:textSize="@dimen/txt_14" />
</LinearLayout>