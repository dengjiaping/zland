<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llToast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_bwhite_sdiv_clarge"
    android:orientation="vertical"
    android:padding="40dp" >

    <ImageView
        android:id="@+id/ivToast"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/img_check_popup" />

    <TextView
        android:id="@+id/tvToastOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="这是Toast内容1区。。。"
        android:textColor="@color/color_f3"
        android:textSize="@dimen/txt_18" />

    <TextView
        android:id="@+id/tvToastTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="这是Toast内容2区。。。"
        android:textColor="@color/color_f3"
        android:textSize="@dimen/txt_18"
        android:visibility="gone" />

</LinearLayout>