<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootBg1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_line_height"
            android:background="@color/color_div" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/img_arrow_right"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:textColor="@color/color_f1"
            android:textSize="@dimen/txt_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_line_height"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_div" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rect_bwhite_sdiv_clarge"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="取消报名"
                android:textColor="@color/color_f3"
                android:textSize="@dimen/txt_16" />

            <LinearLayout
                android:id="@+id/llSignAudit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <View
                    android:layout_width="35dp"
                    android:layout_height="@dimen/app_line_height"
                    android:background="@color/color_f3" />

                <TextView
                    android:id="@+id/tvSignAudit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/color_f3"
                    android:textSize="@dimen/txt_16" />

                <View
                    android:layout_width="35dp"
                    android:layout_height="@dimen/app_line_height"
                    android:background="@color/color_f3" />

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:textColor="@color/color_f2"
            android:textSize="@dimen/txt_16" />

        <View
            android:id="@+id/linePayStatus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_line_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_div" />

        <LinearLayout
            android:id="@+id/llPayStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/ivPayStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/img_campaign_pay_wait" />

            <TextView
                android:id="@+id/tvPayStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="15dp"
                android:text="待支付"
                android:textColor="@color/color_f2"
                android:textSize="@dimen/txt_16" />

            <TextView
                android:id="@+id/tvToPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_bdc_cmiddle"
                android:paddingBottom="7dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="7dp"
                android:text="去支付"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_line_height"
            android:background="@color/color_div" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivSignStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/img_icon_status_success" />

</RelativeLayout>