<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvBlockEmptyTitle"
            style="@style/PROFILE_BLOCK_TITLE"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="个人简介" />

        <ImageView
            android:id="@+id/ivBlockEmptyEdit"
            style="@style/PROFILE_BLOCK_IV_RIGHT" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBlockEmtpy"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvEmptyDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="想让大家记住，一个怎么样的自己？"
            android:textColor="@color/color_f3"
            android:textSize="@dimen/txt_16" />

        <TextView
            android:id="@+id/tvEmptyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/sel_profile_btn_add_item"
            android:drawablePadding="6dp"
            android:text="添加个人介绍"
            android:textColor="@color/color_dc"
            android:textSize="@dimen/txt_14" />
    </LinearLayout>

</LinearLayout>