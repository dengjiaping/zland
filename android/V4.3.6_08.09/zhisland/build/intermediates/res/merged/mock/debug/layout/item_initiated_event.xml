<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/RootBg1"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_line_height"
        android:background="@color/color_div" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/img_arrow_right"
        android:paddingBottom="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="15dp"
        android:textColor="@color/color_f1"
        android:textSize="@dimen/txt_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_line_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/color_div" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvChecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/img_people_grey"
            android:drawablePadding="5dp"
            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="12dp"
            android:paddingTop="15dp"
            android:textColor="@color/color_f2"
            android:textSize="@dimen/txt_18" />

        <View
            android:layout_width="@dimen/app_line_height"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/color_div" />

        <TextView
            android:id="@+id/tvToCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/img_people_grey"
            android:drawablePadding="5dp"
            android:paddingBottom="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="5dp"
            android:paddingTop="15dp"
            android:textColor="@color/color_f2"
            android:textSize="@dimen/txt_18" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_line_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/color_div" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/img_arrow_right"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:text="编辑和修改"
            android:textColor="@color/color_f2"
            android:textSize="@dimen/txt_18" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEdit"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rect_bwhite_sdiv_clarge"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="取消活动"
            android:textColor="@color/color_f2"
            android:textSize="@dimen/txt_18" />

        <TextView
            android:id="@+id/tvCancelOrOver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:text="活动已结束"
            android:textColor="@color/color_f3"
            android:textSize="@dimen/txt_18" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_line_height"
        android:layout_marginTop="10dp"
        android:background="@color/color_div" />

</LinearLayout>