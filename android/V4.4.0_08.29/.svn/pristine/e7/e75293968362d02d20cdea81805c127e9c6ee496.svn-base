<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg2"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rect_bwhite_sdiv_cmiddle"
        android:gravity="top|left"
        android:lines="5"
        android:maxLines="5"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/sel_bg_btn_bgreen"
        android:gravity="center"
        android:text="发表"
        android:textColor="@color/color_bg1"
        android:textColorHint="@color/color_f2"
        android:textSize="@dimen/txt_16" />

</LinearLayout>