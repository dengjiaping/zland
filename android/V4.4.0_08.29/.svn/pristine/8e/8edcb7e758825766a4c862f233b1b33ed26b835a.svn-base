<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	style="@style/RootBgWhite"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rect_bwhite_sdiv_clarge"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left|center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="名称"
                android:textColor="@color/color_f2"
                android:textSize="@dimen/txt_20" />

            <TextView
                android:id="@+id/tvTribeName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="left|center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="正和岛"
                android:textColor="@color/color_f1"
                android:textSize="@dimen/txt_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_bwhite_sdiv_clarge"
            android:orientation="vertical"
            android:padding="2dp" >

            <TextView
                android:id="@+id/tvCanSearch"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:drawableRight="@drawable/sel_radio_box"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="可被搜索到，申请加入"
                android:textColor="@color/sel_color"
                android:textSize="@dimen/txt_20" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_line_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_div" />

            <TextView
                android:id="@+id/tvDontSearch"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:drawableRight="@drawable/sel_radio_box"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="不可被搜索，仅通过邀请加入"
                android:textColor="@color/sel_color"
                android:textSize="@dimen/txt_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_bwhite_sdiv_clarge"
            android:orientation="vertical"
            android:padding="2dp" >

            <TextView
                android:id="@+id/tvMemberCheck"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:drawableRight="@drawable/sel_switch"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="成员加入需审核"
                android:textColor="@color/sel_color"
                android:textSize="@dimen/txt_20" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_line_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_div" />

            <TextView
                android:id="@+id/tvDaoqinCheck"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:drawableRight="@drawable/sel_switch"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="岛亲免审核"
                android:textColor="@color/sel_color"
                android:textSize="@dimen/txt_20" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>