<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhisland="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp">

    <com.zhisland.android.blog.common.view.ScaleImageView
        android:id="@+id/sivOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="1"
        android:background="@color/color_em"
        android:scaleType="centerCrop"
        zhisland:scaleHeight="1"
        zhisland:scaleWidth="1" />

    <com.zhisland.android.blog.common.view.ScaleImageView
        android:id="@+id/sivTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="1"
        android:background="@color/color_em"
        android:scaleType="centerCrop"
        zhisland:scaleHeight="1"
        zhisland:scaleWidth="1" />

    <com.zhisland.android.blog.common.view.ScaleImageView
        android:id="@+id/sivThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="1"
        android:background="@color/color_em"
        android:scaleType="centerCrop"
        zhisland:scaleHeight="1"
        zhisland:scaleWidth="1" />

</LinearLayout>