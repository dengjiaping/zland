public interface IConfirmDlgMgr {

    /**
     * 设置事件监听
     *
     * @param listener
     */
    void setListener(CommonDlgListener listener);

    /**
     * 展示指定的对话框
     *
     * @param tag        对话框的表示
     * @param title      确认对话框标题
     * @param okText     确认按钮文案
     * @param cancelText 取消按钮文案
     * @param arg        可以附带的参数
     */
    void show(String tag, String title, String okText, String cancelText, Object arg);

    /**
     * 隐藏指定的确认对话框
     *
     * @param tag
     */
    void hide(String tag);
}
