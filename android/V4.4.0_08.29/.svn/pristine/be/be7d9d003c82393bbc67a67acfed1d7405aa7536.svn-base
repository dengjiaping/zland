<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRooView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_bwhite_clargest"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="40dp" >

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="发布成功"
        android:textColor="@color/color_f1"
        android:textSize="@dimen/txt_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_divider_height"
        android:layout_marginTop="13dp"
        android:background="@color/color_div" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="您可以通过以下方式邀请好友参与"
        android:textColor="@color/color_f3"
        android:textSize="@dimen/txt_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvShareWeChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/img_wechat"
            android:gravity="center_horizontal"
            android:text="微信好友"
            android:textColor="@color/color_f2"
            android:textSize="@dimen/txt_14" />

        <TextView
            android:id="@+id/tvShareWeChatCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/img_wechat_circle"
            android:gravity="center_horizontal"
            android:text="朋友圈"
            android:textColor="@color/color_f2"
            android:textSize="@dimen/txt_14" />
    </LinearLayout>

</LinearLayout>