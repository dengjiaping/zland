<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_bbg2_sdiv_clarge"
    android:minHeight="68dip"
    android:orientation="vertical"
    android:paddingBottom="16dip"
    android:paddingLeft="16dip"
    android:paddingRight="16dip"
    android:paddingTop="16dip">


    <TextView
        android:id="@+id/resource_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="comment_content"
        android:textColor="@color/color_f1"
        android:textSize="16sp"></TextView>

    <com.zhisland.android.blog.common.view.flowlayout.TagFlowLayout
        android:id="@+id/resource_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resource_title"
        android:layout_marginTop="14dip" />


</RelativeLayout>