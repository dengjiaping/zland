<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llTribeCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rect_bwhite_sdiv_clarge_top"
        android:gravity="center_vertical"
        android:padding="20dp" >

        <ImageView
            android:id="@+id/ivTribeCardIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar_default" />

        <TextView
            android:id="@+id/tvTribeCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_f1"
            android:textSize="@dimen/txt_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_bdc_clarge_bottom"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp" >

        <TextView
            android:id="@+id/tvTribeAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="http://www.baidu.com/"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_16"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rect_bwhite_sdiv_clarge"
            android:src="@drawable/icon_login" />

        <TextView
            android:id="@+id/tvTribeTextOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="链接已复制到粘贴板"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_16" />

        <TextView
            android:id="@+id/tvTribeTextTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送链接以邀请好友"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_16" />

        <TextView
            android:id="@+id/tvTribeButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginTop="40dp"
            android:background="@drawable/rect_bwhite_sdiv_clargest"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_dc"
            android:textSize="@dimen/txt_18" />
    </LinearLayout>

</LinearLayout>