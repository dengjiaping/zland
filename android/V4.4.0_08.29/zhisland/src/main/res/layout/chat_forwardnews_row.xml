<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/chat_content_block"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/iv_chat_forward_title"
        style="@style/ChattingUITitle"
        android:layout_marginBottom="6dp"
        android:ellipsize="end"
        android:maxLines="2" />

    <ImageView
        android:id="@+id/iv_chat_forward_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/iv_chat_forward_title"
        android:scaleType="centerCrop"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/iv_chat_forward_desc"
        style="@style/ChattingUIDesc"
        android:layout_below="@id/iv_chat_forward_title"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/iv_chat_forward_pic"
        android:maxLines="4" />

</RelativeLayout>