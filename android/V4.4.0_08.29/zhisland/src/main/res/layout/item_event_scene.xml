<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlScene"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    style="@style/RootBgImgCampaignBannerBg"
    android:paddingLeft="25dp"
    android:paddingRight="25dp" >

    <ImageView
        android:id="@+id/ivLeftIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/spot" />

    <TextView
        android:id="@+id/tvEnter"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_event_scene_enter"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="进入"
        android:textColor="#e46e64"
        android:textSize="@dimen/txt_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignTop="@id/ivLeftIcon"
        android:layout_toLeftOf="@id/tvEnter"
        android:layout_toRightOf="@id/ivLeftIcon"
        android:gravity="top"
        android:textColor="#e46e64"
        android:textSize="@dimen/txt_14" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/ivLeftIcon"
        android:layout_toLeftOf="@id/tvEnter"
        android:layout_toRightOf="@id/ivLeftIcon"
        android:gravity="top"
        android:singleLine="true"
        android:textColor="#2e3339"
        android:textSize="@dimen/txt_16" />

</RelativeLayout>