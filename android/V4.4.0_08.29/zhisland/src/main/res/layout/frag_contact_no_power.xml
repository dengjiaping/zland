<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="为了帮你快速找到好友\n需要使用你的手机通讯录"
        android:textColor="@color/color_f1"
        android:textSize="@dimen/txt_22"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/task_background_addressbook"/>

    <TextView
        android:id="@+id/tvOpenContactPower"
        style="@style/LOGIN_BUTTON"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="50dp"
        android:text="开启通讯录访问权限"
        />

    <TextView
        android:id="@+id/tvNotAddFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="不添加好友"
        android:textColor="@color/color_dc"
        android:textSize="@dimen/txt_16"/>

</LinearLayout>