<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootBgWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivChatHeaderAvatar"
        android:layout_width="@dimen/app_avatar_list_size"
        android:layout_height="@dimen/app_avatar_list_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tvChatHeaderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivChatHeaderAvatar"
        android:textColor="@color/color_f1"
        android:textSize="@dimen/txt_16" />


    <ImageView
        android:id="@+id/ivChatHeaderArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/sel_btn_arrow"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvChatHeaderNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/red_dot2"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/white"
        android:visibility="gone" />


    <View
        android:id="@+id/vChatHeaderLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ivChatHeaderAvatar"
        android:layout_marginLeft="16dp"
        android:background="@color/color_div" />
</RelativeLayout>