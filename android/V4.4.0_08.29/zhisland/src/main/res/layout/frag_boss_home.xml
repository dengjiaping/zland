<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    style="@style/RootBg2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rect_bwhite_clarge"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:text="查找人脉"
                android:textColor="@color/color_f3"
                android:textSize="@dimen/txt_14" />

            <View
                android:layout_width="@dimen/app_line_height"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/color_div" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/sel_btn_search" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_line_height"
            android:background="@color/color_div" />

        <LinearLayout
            android:id="@+id/llAllBoss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bg1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="全部企业家"
                android:textColor="@color/color_f1"
                android:textSize="@dimen/txt_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/img_arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_line_height"
            android:background="@color/color_div" />

        <LinearLayout
            android:id="@+id/llNear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bg1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="附近的人"
                android:textColor="@color/color_f1"
                android:textSize="@dimen/txt_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/img_arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_line_height"
            android:background="@color/color_div" />

        <LinearLayout
            android:id="@+id/llFamous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/img_find_famousdaolin"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="终身岛邻"
                android:textColor="@color/color_f2"
                android:textSize="@dimen/txt_14" />

            <com.zhisland.lib.view.HorizontalListView
                android:id="@+id/hlvFamous"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:fadingEdgeLength="5dp"
                android:requiresFadingEdge="horizontal" />

        </LinearLayout>

        <View
            android:id="@+id/lineBelowFamous"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_line_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_div" />

        <LinearLayout
            android:id="@+id/llNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/img_find_newdaolin"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="最新岛邻"
                android:textColor="@color/color_f2"
                android:textSize="@dimen/txt_14" />

            <com.zhisland.lib.view.HorizontalListView
                android:id="@+id/hlvNew"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:fadingEdgeLength="5dp"
                android:requiresFadingEdge="horizontal" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>