<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivCommentBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scaleType="fitXY" >
    </ImageView>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88ffffff" />

    <RelativeLayout
        android:id="@+id/rlCommentCardMain"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/ivCommentSex"
            android:layout_width="fill_parent"
            android:layout_height="178dp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp"
            android:paddingLeft="3dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile_img_weizhan_female" />

        <RelativeLayout
            android:id="@+id/rlCommentPart2"
            android:layout_width="fill_parent"
            android:layout_height="117dp"
            android:layout_below="@id/ivCommentSex" >

            <ImageView
                android:id="@+id/ivCommentPart2Bg"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/profile_img_weizhan_bottom" />

            <TextView
                android:id="@+id/tvCommentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLength="40"
                android:singleLine="true"
                android:text="姓名"
                android:textColor="@color/color_f1"
                android:textSize="@dimen/txt_18" >
            </TextView>

            <TextView
                android:id="@+id/tvCommentCompanyAndPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCommentName"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="16dp"
                android:lineSpacingExtra="1dp"
                android:maxLength="20"
                android:paddingBottom="15dp"
                android:text="职务"
                android:textColor="@color/color_f2"
                android:textSize="@dimen/txt_14" >
            </TextView>

            <ImageView
                android:id="@+id/ivBottomIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/zhisland_icon_green" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvCommentCardNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlCommentPart2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="正和岛微服务用户"
            android:textColor="@color/color_f1"
            android:textSize="@dimen/txt_22" />
    </RelativeLayout>

</RelativeLayout>