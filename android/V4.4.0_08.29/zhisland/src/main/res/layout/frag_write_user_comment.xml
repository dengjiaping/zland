<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootBgWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="30dp" >

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评价一下"
        android:textColor="@color/color_f2"
        android:textSize="@dimen/txt_16" />

    <com.zhisland.android.blog.common.view.CountEditText
        android:id="@+id/etWriteUC"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_divider_height"
        android:layout_marginTop="10dp"
        android:background="@drawable/line_divider_all" />

</LinearLayout>