<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llRoot"
	style="@style/RootBgTransparent"
    android:gravity="bottom" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rect_bdc_clarge"
            android:padding="12dp"
            android:text="删 除"
            android:textColor="@color/color_bg1"
            android:textSize="@dimen/txt_20" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rect_bwhite_sdc_clarge"
            android:padding="12dp"
            android:text="取 消"
            android:textColor="@color/color_dc"
            android:textSize="@dimen/txt_20" />
    </LinearLayout>

</LinearLayout>