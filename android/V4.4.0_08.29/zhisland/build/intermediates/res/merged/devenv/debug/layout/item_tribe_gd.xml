<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llTribeItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_bwhite_sdiv_clarge"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/ivTribeIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvTribeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="正和岛"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_18" />

    <TextView
        android:id="@+id/tvTribleDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="高端商务人群的圈子"
        android:textColor="@color/color_f3"
        android:textSize="@dimen/txt_16" />

</LinearLayout>