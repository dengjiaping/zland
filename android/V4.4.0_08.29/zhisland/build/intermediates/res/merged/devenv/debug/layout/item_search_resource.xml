<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootBg1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhisland.android.blog.common.view.AvatarView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/app_avatar_size"
            android:layout_height="@dimen/app_avatar_size"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp" />

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/img_find_res" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignTop="@id/ivAvatar"
            android:layout_toLeftOf="@id/ivRight"
            android:layout_toRightOf="@id/ivAvatar"
            android:gravity="bottom"
            android:singleLine="true"
            android:textColor="@color/color_f1"
            android:textSize="@dimen/txt_18" />

        <TextView
            android:id="@+id/tvComAndPos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/ivAvatar"
            android:gravity="top"
            android:paddingBottom="15dp"
            android:paddingTop="0dp"
            android:singleLine="true"
            android:textColor="@color/color_f3"
            android:textSize="@dimen/txt_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_line_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_div" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="17dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="17dp"
        android:textColor="@color/color_f1"
        android:textSize="@dimen/txt_16" />

    <com.zhisland.android.blog.common.view.flowlayout.TagFlowLayout
        android:id="@+id/tflTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_line_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_div" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/color_f3"
        android:textSize="@dimen/txt_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_bg2" />
</LinearLayout>