<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="7dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_bwhite_clargest">

        <ImageView
            android:id="@+id/ivTaskListItemIcon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ivTaskListItemIcon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTaskListItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_f2"
                android:textSize="@dimen/txt_20" />

            <TextView
                android:id="@+id/tvTaskListItemDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_f3"
                android:textSize="@dimen/txt_14" />

        </LinearLayout>


        <ImageView
            android:id="@+id/ivTaskListItemComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/task_img_finish2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivTaskListItemUnvisited"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/red_dot"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>