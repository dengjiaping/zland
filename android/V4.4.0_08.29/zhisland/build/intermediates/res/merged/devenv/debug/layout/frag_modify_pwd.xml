<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/RootBg2"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tvInputPwdDesc"
        style="@style/LOGIN_DESC"
        android:layout_margin="0dp"
        android:padding="15dp"
        android:text="密码最少为6位字符"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_divider_height"
        android:background="@drawable/line_divider_all"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="新密码"
            android:textColor="@color/color_f2"
            android:textSize="@dimen/txt_18"/>

        <EditText
            android:id="@+id/etNewPwd"
            style="@style/LOGIN_EDIT_TEXT"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请设置新密码"
            android:inputType="textPassword"/>

        <ImageView
            android:id="@+id/ivNewPwdEye"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/bg_eye"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_divider_height"
        android:background="@drawable/line_divider_all"/>

</LinearLayout>