<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    style="@style/RootBg1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"


    >

    <com.zhisland.android.blog.common.view.AvatarView
        android:id="@+id/ivAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/rlRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tvCheckOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/sel_bg_btn_bgreen"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="通过"
            android:textColor="@color/color_bg1"
            android:textSize="@dimen/txt_16" />

        <TextView
            android:id="@+id/tvSignOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="已通过"
            android:textColor="@color/color_f3"
            android:textSize="@dimen/txt_16" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="17dp"
        android:layout_toLeftOf="@id/rlRight"
        android:layout_toRightOf="@id/ivAvatar"
        android:singleLine="true"
        android:textColor="@color/color_f1"
        android:textSize="@dimen/txt_16" />

    <TextView
        android:id="@+id/tvComAndPos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/rlRight"
        android:layout_toRightOf="@id/ivAvatar"
        android:gravity="top"
        android:singleLine="true"
        android:textColor="@color/color_f3"
        android:textSize="@dimen/txt_14" />

    <TextView
        android:id="@+id/tvMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvComAndPos"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/rlRight"
        android:layout_toRightOf="@id/ivAvatar"
        android:gravity="top"
        android:singleLine="true"
        android:textColor="@color/color_f3"
        android:textSize="@dimen/txt_12"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_line_height"
        android:layout_below="@id/ivAvatar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_div" />

</RelativeLayout>