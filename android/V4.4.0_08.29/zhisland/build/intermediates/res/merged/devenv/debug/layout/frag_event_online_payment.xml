<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootBgWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6dp"
        android:text="报名名额将为您保留30分钟\n请尽快支付活动费用"
        android:textColor="@color/color_f1"
        android:textSize="@dimen/txt_18" />

    <TextView
        android:id="@+id/tvEventPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_f1"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/tvWCPay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sel_bg_btn_bgreen"
        android:gravity="center"
        android:text="进入微信支付"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_16" />

    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6dp"
            android:text="若您在30分钟内未完成在线支付\n工作人员将联系您尝试进行线下支付"
            android:textColor="@color/color_f3"
            android:textSize="@dimen/txt_14" />

        <TextView
            android:id="@+id/tvGiveUpPay"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="放弃在线支付 >"
            android:textColor="@color/color_dc"
            android:textSize="@dimen/txt_16" />
    </LinearLayout>
</LinearLayout>