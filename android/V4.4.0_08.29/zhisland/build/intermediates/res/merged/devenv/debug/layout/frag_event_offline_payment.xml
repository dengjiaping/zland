<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootBgWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/campaign_img_pay_offline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="请支付活动费用"
        android:textColor="@color/color_f1"
        android:textSize="@dimen/txt_22" />

    <TextView
        android:id="@+id/tvEventPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_f1"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="center_horizontal"
        android:text="工作人员稍后将联系您进行线下支付"
        android:textColor="@color/color_f2"
        android:textSize="@dimen/txt_16" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIKnow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sel_bg_btn_bwhite_sgreen"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/color_dc"
            android:textSize="@dimen/txt_16" />

        <TextView
            android:id="@+id/tvWCPay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sel_bg_btn_bgreen"
            android:gravity="center"
            android:text="进入微信支付"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_16" />

        <TextView
            android:id="@+id/tvPayDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6dp"
            android:text="想尽快完成报名？建议您采用微信支付"
            android:textColor="@color/color_f3"
            android:textSize="@dimen/txt_14" />
    </LinearLayout>
</LinearLayout>